{
	"name": "vscode-redhat-account",
	"displayName": "Red Hat Authentication",
	"description": "Provides authentication support for Red Hat accounts",
	"version": "0.0.4",
	"publisher": "redhat",
	"engines": {
		"vscode": "^1.54.0"
	},
	"icon": "icons/redhat-icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/redhat-developer/vscode-redhat-account"
	},
	"categories": [
		"Other"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"activationEvents": [
		"onAuthenticationRequest:redhat-account-auth",
		"onAuthenticationRequest:redhat-mas-account-auth"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"authentication": [
			{
				"label": "Red Hat",
				"id": "redhat-account-auth"
			},
			{
				"label": "Red Hat OpenShift Application Services",
				"id": "redhat-mas-account-auth"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Red Hat Authentication",
			"properties": {
				"redhat.telemetry.enabled": {
					"type": "boolean",
					"default": null,
					"markdownDescription": "Enable usage data and errors to be sent to Red Hat servers. Read our [privacy statement](https://developers.redhat.com/article/tool-data-collection).",
					"scope": "window"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@redhat-developer/vscode-redhat-telemetry": "^0.1.1",
		"openid-client": "^4.7.4"
	},
	"devDependencies": {
		"@eclipse-che/plugin": "0.0.1-1623517395",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.19.9",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.2",
		"source-map-support": "^0.5.19",
		"ts-loader": "^8.0.14",
		"typescript": "^4.2.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}
