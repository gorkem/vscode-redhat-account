{
	"name": "vscode-redhat-account",
	"displayName": "Red Hat Authentication",
	"description": "Provides authentication support for Red Hat accounts",
	"version": "0.0.6",
	"publisher": "redhat",
	"engines": {
		"vscode": "^1.54.0"
	},
	"icon": "icons/redhat-icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/redhat-developer/vscode-redhat-account"
	},
	"categories": [
		"Other"
	],
	"extensionKind": [
		"workspace"
	],
	"activationEvents": [
		"onAuthenticationRequest:redhat-account-auth"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"authentication": [
			{
				"label": "Red Hat",
				"id": "redhat-account-auth"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Red Hat Authentication",
			"properties": {
				"redhat.telemetry.enabled": {
					"type": "boolean",
					"default": null,
					"markdownDescription": "Enable usage data and errors to be sent to Red Hat servers. Read our [privacy statement](https://developers.redhat.com/article/tool-data-collection).",
					"scope": "window",
					"tags": [
						"telemetry"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@redhat-developer/vscode-redhat-telemetry": "0.4.2",
		"openid-client": "5.1.8"
	},
	"devDependencies": {
		"@eclipse-che/plugin": "0.0.1-1623517395",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^14.14.20",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^5.23.0",
		"@typescript-eslint/parser": "^5.23.0",
		"eslint": "^8.15.0",
		"glob": "^8.0.1",
		"mocha": "^10.0.0",
		"source-map-support": "^0.5.21",
		"ts-loader": "9.3.0",
		"typescript": "^4.6.4",
		"vscode-test": "^1.6.1",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
